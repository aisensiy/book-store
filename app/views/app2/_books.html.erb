<div class="row books">
  <div class="span9">
    <ul class="media-list book-list clearfix">
      <li class="media" ng-repeat="book in books">
      <img ng-src="{{book.cover_url}}" alt="" class="cover" />
        <span class="title">{{book.title}}</span>
        <rating value="5" max="5" readonly="true"></rating>
      </li>
    </ul>
  </div>
  <div class="span3">
    <ul class="media-list book-list clearfix sidebar">
      <% 3.times do %>
        <li class="media">
        <img src="/assets/book-cover2.png" alt="" class="cover" />
        <span class="title">货币、银行信贷与经济周期</span>
        <rating value="3" max="5" readonly="true"></rating>
        </li>
      <% end %>
    </ul>
  </div>
</div>

