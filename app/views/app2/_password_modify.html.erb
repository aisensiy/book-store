<div class="row">
  <div class="login-panel span6 offset3">
    <form class="form-horizontal" name="password_modify_form" data-ng-submit="submit_form()">
      <legend>密码修改</legend>
      <div class="alert alert-success" data-ng-show="succ_msg">{{succ_msg}}</div>
      <div class="alert alert-error" data-ng-show="fail_msg">{{fail_msg}}</div>
      <div class="control-group">
        <label class="control-label" for="old_password">Password</label>
        <div class="controls">
          <input type="password" data-ng-model="model.oldpassword" id="old_password" placeholder="Old Password" required>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="password">New Password</label>
        <div class="controls">
          <input type="password" id="password" name="password" placeholder="New Password" data-ng-model="model.password" required />
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="password_confirmation">Password Confirm</label>
        <div class="controls">
          <input type="password"
          id="password_confirmation" placeholder="New Password Again"
          ng-model="model.password_confirmation" passwordconfirm="#password" name="password_confirmation" required />
          <span class="help-inline" ng-show="password_modify_form.password_confirmation.$error.password">重复输入密码不一致</span>
        </div>
      </div>
      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Update</button>
        <button type="button" class="btn">Cancel</button>
      </div>
    </form>
  </div>
</div>
