<form action="" name="edit_image_form" ng-submit="submit_form()" >
  <div class="row">
    <div class="span10 col offset1">
      <legend><%= t 'image_edit' %></legend>
      <div class="alert alert-error" ng-show="fail_msg">{{fail_msg}}</div>
      <div class="alert alert-success" ng-show="succ_msg">{{succ_msg}}</div>
      <div class="picture-container clearfix">
        <div class="book-meta">
          <div class="wrapper">
            <div class="picture-cover pull-left">
              <img ng-src="{{image.file_key | thumb}}" alt="" />
            </div>
            <div class="info">
              <h1><label><%= t 'title' %>: </label><input type="text" class="span5" ng-model="image.title" /></h1>
              <p><label><%= t 'rate' %>: </label><rating value="image.rate" max="5" readonly="rate_readonly"></rating></p>
              <div>
                <label class="tag-label"><%= t 'tag_add' %>: </label>
                <div class="tag-wrapper clearfix">
                  <input type="text" class="span5" ng-model="tags_input_value" placeholder="" />
                  <p><%= t 'space_split_message' %></p>
                  <span class="tag" ng-class="{disabled: image.tags.indexOf(tag) != -1}"  ng-repeat="tag in tags" ng-click="toggle_tag(tag)">{{tag}}</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span10 offset1">
      <button class="btn pull-right btn-large"><%= t 'save' %></button>
    </div>
  </div>
</form>

